# Server Configuration
PORT=9000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1d

# Auth cookies (for cross-origin: frontend on Vercel, API on duckdns)
# Production defaults: SameSite=none so cookies work cross-site. Override if needed:
# COOKIE_SAME_SITE_ACCESS=none
# COOKIE_SAME_SITE_REFRESH=none
# COOKIE_SECURE=true

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/saas_platform

# CORS Configuration
CORS_ORIGINS=http://localhost:5000,http://localhost:3001

# Email Configuration (for password reset)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@example.com

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:3000

# Other Configuration
API_PREFIX=/api
